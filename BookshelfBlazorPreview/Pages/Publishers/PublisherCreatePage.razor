@page "/publishercreate"

@using Bookshelf.ViewModel.Page
@using Microsoft.AspNetCore.Components
@using Bookshelf

@inject ApiClient apiClient
@inject IUriHelper uriHelper

<h1>@vm.Title</h1>

<table>
    <tr>
        <td></td>
        <td style="color:red">@vm.NameMessage</td>
    </tr>
    <tr>
        <td>Prénom</td>
        <td><input type="text" bind="@vm.Name" /></td>
    </tr>
    <tr>
        <td rowspan="2"><button onclick="@vm.Ajouter">Ajouter</button></td>
    </tr>
</table>

@functions{
    PublisherCreatePageViewModel vm = null;

    protected override void OnInit()
    {
        base.OnInit();
        vm = new PublisherCreatePageViewModel(uriHelper, apiClient);
    }

    protected override async Task OnInitAsync()
    {
    }
}